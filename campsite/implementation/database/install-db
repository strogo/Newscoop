if [ ! -f campsite-db.sql ]; then
    echo "Database dump file does not exist."
    exit 1
fi

[ "$CAMPSITE_PACKAGE_DIR" = "" ] && cd ../.. && export CAMPSITE_PACKAGE_DIR=`pwd` && cd implementation/database
[ "$INSTALL_CONF" = "" ] && export INSTALL_CONF=${CAMPSITE_PACKAGE_DIR}/.install_conf
. ${INSTALL_CONF}/conf_functions

modules_conf --set DATABASE
[ $? -ne 0 ] && exit 1
password=""
[ "$DATABASE_PASSWORD" != "" ] && password="-p $DATABASE_PASSWORD"

mysqladmin create $DATABASE_NAME -h $DATABASE_SERVER -P $DATABASE_PORT -u $DATABASE_USER $password
result=$?
if [ "$result" != "0" ]; then
    touch ../../campsite_upgrade
    echo "Database alread exists."
    OLD_VERSION=""
    if [ -f "$CAMPSITE_PACKAGE_DIR/.old_version" ]; then
	OLD_VERSION=`cat $CAMPSITE_PACKAGE_DIR/.old_version`
    fi
    echo "[$OLD_VERSION]"
    if [ "$OLD_VERSION" != "" ]; then
	if [ -d "./upgrade/$OLD_VERSION" ]; then
	    upgrade_dir="./upgrade/$OLD_VERSION"
	else
	    upgrade_dir="./upgrade/2.0.x"
	fi
    else
	upgrade_dir="./upgrade/2.0.x"
    fi
    echo "Upgrading database from $upgrade_dir..."
    mysql -f $DATABASE_NAME -h $DATABASE_SERVER -P $DATABASE_PORT -u $DATABASE_USER $password < $upgrade_dir/tables.sql
    if [ $? -ne 0 ]; then
	echo "Error upgrading tables"
	exit 1
    fi
    mysql -f $DATABASE_NAME -h $DATABASE_SERVER -P $DATABASE_PORT -u $DATABASE_USER $password < $upgrade_dir/data-required.sql
    if [ $? -ne 0 ]; then
        echo "Error upgrading tables data"
        exit 1
    fi
    mysql -f $DATABASE_NAME -h $DATABASE_SERVER -P $DATABASE_PORT -u $DATABASE_USER $password < $upgrade_dir/data-optional.sql
else
    echo -n "Creating campsite database..."
    mysql $DATABASE_NAME -h $DATABASE_SERVER -P $DATABASE_PORT -u $DATABASE_USER $password < campsite-db.sql 1> /dev/null
    [ $? -ne 0 ] && exit 1
fi
echo "done."
exit 0
